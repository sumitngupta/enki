<%= form.inputs do -%>
  <%= form.input :title, :input_html => {:class => 'input-block-level'} %>
  <%= form.input :slug, :input_html => {:class => 'input-block-level'}, :hint => "Leave blank for an auto-generated slug based on the title." %>
  <%= form.input :body, :input_html => {:class => 'input-block-level'}, :hint => "<a href='http://textile.thresholdstate.com/'>Textile enabled</a>. Use Ctrl+E to switch between preview and edit mode.".html_safe %>
<% end -%>
