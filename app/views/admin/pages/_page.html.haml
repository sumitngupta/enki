%tr{:class => cycle('', 'alt')}
  %td= page.created_at.strftime('%d %b, %Y')
  %td= link_to(page.title, admin_page_path(page))
  %td= truncate(page.body, :length => 50)
  %td= page.slug
  %td
    = link_to admin_page_path(page) do
      %i.icon-pencil
    = form_for(page, :as => :page, :url => admin_page_path(page), :html => {:class => 'delete-item', :method => :delete}) do |form|
      %i.icon-trash
