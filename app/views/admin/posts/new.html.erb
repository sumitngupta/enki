<h1>New post</h1>
<%= semantic_form_for [:admin, @post], :html => {:class => 'form-horizontal'} do |form| -%>
  <%= render :partial => 'form', :locals => {:form => form} -%>
  <%= form.actions do -%>
    <%= form.action :submit, :as => :button -%>
    <%= form.action :submit, :as => :button, :label => 'Draft', :button_html => {:value => 'draft'} -%>
  <% end -%>
<% end -%>
