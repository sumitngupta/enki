= form.inputs do
  = form.input :title, :input_html => {:class => 'input-block-level'}
  = form.input :body, :input_html => {:class => 'input-block-level'}, :hint => "<a href='http://github.github.com/github-flavored-markdown/'>Markdown enabled</a>. Use Ctrl+E to switch between preview and edit mode.".html_safe
  = form.input :tag_list, :as => 'string', :input_html => {:class => 'input-block-level'}, :required => false, :hint => 'Comma separated: ruby, rails&hellip;'.html_safe
= form.inputs do
  = form.input :published_at_natural, :input_html => {:class => 'input-block-level'}, :label => 'Published at', :as => 'string', :hint => 'Example: now, yesterday, 1 hour from now, '.html_safe + link_to("more&hellip;".html_safe, "http://chronic.rubyforge.org/")
  = form.input :slug, :input_html => {:class => 'input-block-level'}, :hint => "Leave blank for an auto-generated slug based on the title."
  = form.input :minor_edit, :as => 'boolean', :input_html => {:class => 'input-block-level'}, :hint => 'Minor edits will not show up as refreshed in feed readers. Use this to fix spelling mistakes and the like.' unless @post.new_record?
